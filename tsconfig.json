{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES5",
        "outDir": "bin",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "filesGlob": [
        "src/*.ts"
    ],
    "files": [
        "src/app.ts",
        "src/lib.ts",
        "src/routes.ts"
    ]
}
